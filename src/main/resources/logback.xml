<configuration>
    <!-- ConsoleAppender 输出日志到控制台 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 自定义日志格式 -->
            <pattern>
                <!-- [时间] [线程] [日志级别] 类名 - 日志消息 -->
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Root logger 配置，设置日志级别为 INFO -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- 如果需要调试特定的包或类，可以为它们单独设置日志级别 -->
    <logger name="icu.wenxin.napcat" level="DEBUG"/>
</configuration>
